# Backend environment example
# Copy to .env for local dev. For Cloud Run, set these as env vars or use Secret Manager.

# CORS
CORS_ORIGINS=*

# Limits
MAX_FILES=10
MAX_SIZE_MB=10
MAX_PAGES=20

# GCP
GCS_BUCKET=invoice_processing_storage
REGION=europe-west4
FIRESTORE_DATABASE_ID=(default)
GCP_PROJECT=your-gcp-project-id

# Cloud Tasks
TASKS_QUEUE=invoice-process-queue
# Set to your Cloud Run service URL + /api/tasks/process after deploy
TASKS_TARGET_URL=
# Service account email used by Cloud Tasks to call Cloud Run with OIDC
TASKS_SERVICE_ACCOUNT_EMAIL=
# Use true locally; false in Cloud Run
TASKS_EMULATE=true

# LLM
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free

# OCR
OCR_LANG_HINTS=en,nl

# Retention
RETENTION_HOURS=24
RETENTION_LOOP_ENABLE=true
RETENTION_LOOP_INTERVAL_MIN=60
